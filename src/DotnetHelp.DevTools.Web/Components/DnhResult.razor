<div class="not-prose relative bg-slate-50 rounded-xl dark:bg-slate-800/25">
	<div style="background-position:10px 10px" class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,#fff,rgba(255,255,255,0.6))] dark:bg-grid-slate-700/25 dark:[mask-image:linear-gradient(0deg,rgba(255,255,255,0.1),rgba(255,255,255,0.5))]"></div>
	@if (OnDelete.HasDelegate)
	{
		<div class="absolute right-2 top-2 z-20">
			<DnhButtonCross OnClick="OnDelete" />
		</div>
	}
	@if (OnCopy.HasDelegate)
	{
		<div class="absolute right-3 z-20">
			<DnhButtonCopy OnCopy="OnCopy" />
		</div>
	}
	<div class="relative rounded-xl overflow-auto p-8">
		<div>
			<div class="text-slate-900 dark:text-slate-200 text-wrap break-all">
				@ChildContent
			</div>
		</div>
	</div>
	<div class="absolute inset-0 pointer-events-none border border-black/5 rounded-xl dark:border-white/5"></div>
</div>

@code {

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public EventCallback OnDelete { get; set; }

	[Parameter]
	public EventCallback OnCopy { get; set; }
}
