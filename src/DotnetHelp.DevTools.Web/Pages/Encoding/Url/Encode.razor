@page "/encoding/url/encode"
@using DotnetHelp.DevTools.Shared
@using System.Net

<PageTitle>Url Encode</PageTitle>

<DnhHeader Title="Encoding"
			SubTitle="Url Encode"
			Details=@(new List<string> {
			$"Encode a string into a URL encoded string"
			}) />

<DnhSection>
	<form @onsubmit="OnSubmit">
		<DnhTextArea Label="Input" @bind-Value="_request" />
		<DnhFormButton>Encode</DnhFormButton>
	</form>
</DnhSection>

@if (_response is not null)
{
	<DnhSection Title="Result">

		<DnhResult>
			<p>@_response</p>
		</DnhResult>

	</DnhSection>
}


@code {
	private string? _request;
	private string? _response;

	private void OnSubmit()
	{
		if (!string.IsNullOrWhiteSpace(_request))
		{
			_response = WebUtility.UrlEncode(_request);
			StateHasChanged();
		}
	}
}